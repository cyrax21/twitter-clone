<%- include("./partials/header") %>
    <link rel="stylesheet" href="/css/main.css">

</head>
<body>

    <div class="container">
        <div class="row">
            
            <%- include("./partials/navbar") %>

            <div class="main-container col-10 col-md-8 col-lg-6">

                <div class="titleContainer">
                    <h1><%= payload.user.firstName %></h1>
                </div>
                <script>
                    // to get the user id for getting post and replies
                    var profileUserId = '<%=payload.user._id%>'
                </script>

                <div class="profileHeaderContainer">
                    <div class="coverPhotoSection">
                        <!-- For Cover picture -->
                        <div class="coverPhotoContainer">

                        </div>
                        <!-- For Profile picture -->
                        <div class="userImageContainer">
                            <img src="/images/profilePic.jpg" alt="user profile image">
                        </div>
                    </div>
                    <div class="profileButtonsContainer"></div>
                    <div class="userDetailsContainer">
                        <span class="displayName"><strong><%= payload.displayName %></strong></span>
                        <span class="displayName">@<%= payload.user.username %></span>
                        <span class="description">Add a Bio</span>
                        <div class="followersContainer">
                            <a href="/profile/<%= payload.user.username %>/following">
                                <span class="value"><%= payload.user.following.length %></span>
                                <span>Following</span>
                            </a>
                            <a href="/profile/<%= payload.user.username %>/followers">
                                <span class="value" id="followersValue"><%= payload.user.followers.length %></span>
                                <span>Followers</span>
                            </a>
                            <% if(currentUser._id !== payload.user._id) { %>
                                <a href="/follow/<%= currentUser._id %>/<%= payload.user._id%>">Follow</a>
                            <% } %>
                        </div>
                    </div>
                </div>

                <div class="tabsContainer">
                    <a class="tab active" href="/profile/<%= payload.user.username %>">
                        <span>Posts</span>
                    </a>
                    <a class="tab" href="/profile/<%= payload.user.username %>/replies">
                        <span>Replies</span>
                    </a>
                </div>
                <div class="pinnedPostContainer" style="display: none;"></div>
                <div class="userPostsContainer">
                    <!-- <span class="noResults">Nothing to show.</span> -->
                </div>

            </div>
            <!-- <div class="d-none d-md-block col-md-2 col-lg-4">
                Third div
            </div> -->
        </div>
    </div>

    <script src="https://cdn.jsdelivr.net/npm/axios/dist/axios.min.js"></script>
    <script src="/js/jQuery.js"></script>
    <script src="/js/common.js"></script>
    <script src="/js/profile.js"></script>
<%- include("./partials/footer") %>